@model Hunter.Models.Result
@{
    this.Layout = null;
    var color = "color: #FF0000;";
}

<!DOCTYPE html>
<html>
<head>
    <title>Message</title>
    <style>
        html, body, table, tr, td 
        {
            width: 100%;
            height: 100%;
            margin: 0px;
            padding: 0px;
        }
    </style>
</head>
<body>
    <table>
        <tr>
            <td style="text-align: center; vertical-align: middle; @this.Html.Raw(color)">
                @this.Model.Message
            </td>
        </tr>
    </table>
</body>
</html>
