@section Styles
{
	<environment include="Development">
		<link rel="stylesheet" href="~/Libraries/bootstrap-table/1.11.1/bootstrap-table.css" />
	</environment>
	<environment exclude="Development">
		<link rel="stylesheet" href="~/Libraries/bootstrap-table/1.11.1/bootstrap-table.min.css" />
	</environment>
}

<div style="padding: 0px 2em;">
    <div id="toolbar" class="btn-group">
        <button id="btn-insert" type="button" class="btn btn-default">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            <span>新增</span>
        </button>
        <button id="btn-update" type="button" class="btn btn-default">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            <span>修改</span>
        </button>
        <button id="btn-design" type="button" class="btn btn-default">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            <span>设计</span>
        </button>
        <button id="btn-columns" type="button" class="btn btn-default">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            <span>列</span>
        </button>
        <button id="btn-delete" type="button" class="btn btn-default">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            <span>删除</span>
        </button>
    </div>
	<table id="table"></table>
</div>

@section Scripts
{
	<environment include="Development">
		<script src="~/Libraries/bootstrap-table/1.11.1/bootstrap-table.js"></script>
	</environment>
	<environment exclude="Development">
		<script src="~/Libraries/bootstrap-table/1.11.1/bootstrap-table.min.js"></script>
	</environment>
    <script>
        $(function () {
            var options = {
                url: '@this.Url.Content("~/Form/Query")',
                columns: [
                    { checkbox: true },
                    { field: 'Name', title: '表单名称', sortable: true, width: '200px' },
                    { field: 'Remark', title: '备注', sortable: true, align: 'left' }
                ]
            }
            var $table = $('#table').bootstrapTable($.extend($.BootstrapTable.DEFAULT, options));

			$(window).resize(function () {
				$table.bootstrapTable('resetView', {
					height: $('body').height()
				});
			}).resize()
			var edit = function (id) {
				id = id ? id : ''
				window.top.layer.open({
					type: 2,
					title: '编辑',
					maxmin: false, //开启最大化最小化按钮
					area: ['80%', '80%'],
					content: '@this.Url.Action("Edit", "Form")' + '?ID=' + id
				})
				window.top.RefreshList = function () {
					$table.bootstrapTable('refresh');
				}
			}
            $("#btn-insert").click(function () {
                edit('')
			})
			$("#btn-update").click(function () {
				var selections = $table.bootstrapTable('getSelections');
				if (selections.length == 0) {
					window.top.layer.msg('请选择', { icon: 0 });
				} else {
					console.log(selections[0])
					edit(selections[0].ID)
				}
			})
			$("#btn-design").click(function () {
				var selections = $table.bootstrapTable('getSelections');
				if (selections.length == 0) {
					window.top.layer.msg('请选择', { icon: 0 });
				} else {
					var url = '@this.Url.Action("Design")' + '/' + selections[0].ID
					var specs = 'toolbar=yes, location=yes, directories=no, status=no, menubar=yes, scrollbars=yes, resizable=no, copyhistory=yes'
					specs += ", width=" + $(window.top).width()
					specs += ", height=" + $(window.top).height()
					window.open(url, '', specs)
				}
            })
            $("#btn-columns").click(function () {
                var selections = $table.bootstrapTable('getSelections');
				if (selections.length == 0) {
					window.top.layer.msg('请选择', { icon: 0 });
				} else {
					var url = '@this.Url.Action("Columns")' + '/' + selections[0].ID
				    window.top.layer.open({
					    type: 2,
					    title: '编辑',
					    maxmin: false, //开启最大化最小化按钮
					    area: ['80%', '80%'],
					    content: url
				    })
				}

            })
		})
    </script>
}
